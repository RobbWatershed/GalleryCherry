<resources>
    <!-- Progress Bar -->
    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar" parent="AppTheme.NoActionBar">
        <item name="android:background">@color/primary</item>
    </style>

    <!-- Import Dialog -->
    <style name="ImportDialog" parent="ImportTheme">
        <item name="android:background">@color/white</item>
    </style>

    <style name="NotificationTitle" parent="@android:style/TextAppearance.StatusBar.EventContent.Title" />

    <style name="TextButton">
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>
