<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSurface">@color/window_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:colorBackground">@color/window_background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="materialAlertDialogTheme">@style/MaterialDialogTheme</item>
        <item name="dialogTheme">@style/Dialog</item>
        <item name="actionBarTheme">@style/ActionBar</item>
    </style>

    <!-- Activities with Toolbar as ActionBar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBar">
        <item name="colorSurface">@color/primary</item>
        <item name="colorOnSurface">@color/on_primary</item>
    </style>

    <style name="ActionBarPopup">
        <item name="android:background">@color/dark_gray</item>
        <item name="colorSurface">@color/dark_gray</item>
    </style>

    <style name="AppTheme.NoActionBar.Monochrome">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black_opacity_50</item>
        <item name="colorOnPrimary">@color/light_gray</item>
        <item name="android:windowBackground">@color/cod_gray</item>
    </style>

    <style name="AppTheme.NoActionBar.Overlay">
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Splash Activity -->
    <style name="AppTheme.NoActionBar.Splash">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Prefs Activity -->
    <style name="PrefsTheme" parent="AppTheme">
        <item name="android:divider">@color/secondary</item>
        <item name="android:textColor">@color/primary_text_color_selector</item>
        <item name="android:textColorPrimary">@color/primary_text_color_selector</item>
        <item name="android:textColorSecondary">@color/secondary_text_color_selector</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog</item>
    </style>

    <style name="MaterialDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">?colorSecondary</item>
    </style>

    <style name="Dialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/medium_gray</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:colorBackground">@color/window_background</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textColorPrimary">@color/on_primary</item>
        <item name="android:textColorSecondary">@color/on_secondary</item>
        <item name="android:editTextColor">@color/on_primary</item>
        <item name="textColorAlertDialogListItem">@color/on_primary</item>
        <item name="android:checkboxStyle">@style/DialogCheckbox</item>
    </style>

    <style name="DialogCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/on_primary</item>
    </style>


    <!-- Import Activity -->
    <style name="ImportTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <!-- Import Dialog -->
    <style name="ImportDialogTheme" parent="ImportTheme">
        <item name="android:windowIsFloating">false</item>
    </style>

    <!-- Browser Activity -->
    <style name="BrowserTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <!-- Search Activity -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:colorBackground">@color/window_background</item>
    </style>

    <!-- PIN screens -->
    <style name="PinEntryDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:windowBackground">@drawable/bg_pin_dialog</item>
        <item name="actionMenuTextColor">@color/on_primary</item>
    </style>
</resources>
