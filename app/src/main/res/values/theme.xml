<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.Base" parent="Theme.MaterialComponents">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSurface">@color/window_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:colorBackground">@color/window_background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="materialAlertDialogTheme">@style/App.Dialog</item>
        <item name="dialogTheme">@style/App.DialogFragment</item>
        <item name="android:dialogTheme">@style/App.DialogFragment</item>
        <!-- Toolbar as ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Picture viewer -->
    <style name="Theme.Base.Monochrome">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black_opacity_50</item>
        <item name="colorOnPrimary">@color/light_gray</item>
        <item name="android:windowBackground">@color/cod_gray</item>
    </style>

    <!-- Splash Activity -->
    <style name="Theme.Base.Splash">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Prefs Activity -->
    <style name="Theme.Base.Prefs">
        <!-- Display action bar -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="actionBarTheme">@style/ActionBar</item>
        <item name="android:divider">@color/secondary</item>
        <item name="android:textColor">@color/primary_text_color_selector</item>
        <item name="android:textColorPrimary">@color/primary_text_color_selector</item>
        <item name="android:textColorSecondary">@color/secondary_text_color_selector</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <!-- alertDialogTheme is the actual theme used by PreferenceFragmentCompat -->
        <item name="alertDialogTheme">@style/App.Dialog</item>
    </style>

    <!-- Import Activity -->
    <style name="Theme.Base.Import">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <!-- Browser Activity -->
    <style name="Theme.Base.Browser">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>


    <!-- Dialog themes -->

    <style name="App.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <!-- colorSurface is the actual dialog background -->
        <item name="colorSurface">@color/window_background</item>
        <item name="colorOnSurface">@color/on_primary</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:colorBackground">@color/window_background</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textColorPrimary">@color/on_primary</item>
        <item name="android:textColorSecondary">@color/on_secondary</item>
        <item name="android:editTextColor">@color/on_primary</item>
        <item name="android:textColorHint">@color/on_primary</item>
        <item name="textColorAlertDialogListItem">@color/on_primary</item>
        <item name="android:checkboxStyle">@style/DialogCheckbox</item>
    </style>

    <style name="App.DialogFragment" parent="App.Dialog">
        <!-- Equivalent to DialogFragment.STYLE_NO_FRAME -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Search Activity -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:colorBackground">@color/window_background</item>
    </style>

    <!-- PIN screens -->
    <style name="PinEntryDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:windowBackground">@drawable/bg_pin_dialog</item>
        <item name="actionMenuTextColor">@color/on_primary</item>
    </style>


    <!-- Themes for subcomponents -->
    <style name="ActionBar">
        <item name="colorSurface">@color/primary</item>
        <item name="colorOnSurface">@color/on_primary</item>
    </style>

    <style name="DialogCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/on_primary</item>
    </style>
</resources>
