<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@color/lightGray</item>
    </style>

    <!-- Activities with Toolbar as ActionBar -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@color/lightGray</item>
    </style>

    <style name="AppTheme.NoActionBar.viewer">
        <item name="colorPrimaryDark">@color/black_opacity_50</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Backgrounds -->
    <style name="AppTheme.TaupeBackground" parent="AppTheme">
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="AppTheme.TaupeBackgroundNoActionBar" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Splash Activity -->
    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Prefs Activity -->
    <style name="PrefsThemeDark" parent="AppTheme">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:divider">@color/accent</item>
        <item name="android:textColor">@color/primary_text_color_selector</item>
        <item name="android:textColorPrimary">@color/primary_text_color_selector</item>
        <item name="android:textColorSecondary">@color/secondary_text_color_selector</item>
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="alertDialogTheme">@style/PrefsThemeDialog</item>
    </style>

    <style name="PrefsThemeDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="android:checkboxStyle">@style/PrefsThemeDialogCheckbox</item>
    </style>

    <style name="PrefsThemeDialogCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Import Activity -->
    <style name="ImportTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <!-- Import Dialog -->
    <style name="ImportDialogTheme" parent="ImportTheme">
        <item name="android:windowIsFloating">false</item>
    </style>

    <!-- Browser Activity -->
    <style name="BrowserTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <!-- Downloads -->
    <style name="AppTheme.Downloads" parent="AppTheme.TaupeBackgroundNoActionBar">
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="android:textColorSecondary">@color/lightGray</item>
    </style>

    <style name="DownloadsDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Mikan -->
    <style name="AppTheme.Mikan" parent="AppTheme.TaupeBackground">
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="android:textColorSecondary">@color/lightGray</item>
    </style>

    <!-- Toolbar -->
    <style name="AppTheme.Toolbar" parent="AppTheme.TaupeBackground">
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="android:textColorPrimary">@color/lightGray</item>
        <item name="android:textColorSecondary">@color/lightGray</item>
    </style>

    <!-- Search Activity -->
    <style name="AppTheme.Search" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/windowBackground</item>
    </style>

    <!-- PIN screens -->

    <style name="PinEntryDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@drawable/bg_pin_dialog</item>
    </style>

    <!-- Image viewer -->
    <style name="ViewerBrowseModeDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

</resources>
