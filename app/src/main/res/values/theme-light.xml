<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Light" parent="Theme.Material3.Dark.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryInverse">@color/primary_light</item>
        <item name="colorOnPrimary">@color/on_primary_light</item>
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/on_secondary_light</item>
        <item name="colorTertiary">@color/primary_light</item>
        <item name="colorOnTertiary">@color/on_secondary_light</item>

        <item name="colorSurface">@color/surface_light</item>
        <item name="colorSurfaceVariant">@color/primary_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_light</item>

        <item name="colorSurfaceInverse">@color/surface_inverse_light</item>
        <item name="colorOnSurfaceInverse">@color/on_surface_light</item>

        <item name="colorContainer">@color/container_light</item>
        <item name="colorOnContainer">@color/on_surface_light</item>
        <item name="colorPrimaryContainer">@color/container_light</item>
        <item name="colorOnPrimaryContainer">@color/on_surface_light</item>
        <item name="colorSecondaryContainer">@color/container_light</item>
        <item name="colorOnSecondaryContainer">@color/on_surface_light</item>
        <item name="colorTertiaryContainer">@color/container_light</item>
        <item name="colorOnTertiaryContainer">@color/on_surface_light</item>

        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="android:colorBackground">@color/window_background_light</item>
        <item name="colorOnBackground">@color/on_background_light</item>
        <!-- Toolbars -->
        <item name="toolbarStyle">@style/Theme.Light.Toolbar</item>
        <!-- Dialogs -->
        <item name="materialAlertDialogTheme">@style/Theme.Light.Dialog</item>
        <item name="dialogTheme">@style/Theme.Light.DialogFragment</item>
        <item name="android:dialogTheme">@style/Theme.Light.DialogFragment</item>
        <!-- Preferences -->
        <item name="alertDialogTheme">@style/Theme.Light.Dialog</item>
        <!-- Radio button -->
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
        <!-- Text -->
        <item name="android:editTextColor">@color/on_primary_light</item>
        <item name="android:textColorPrimary">@color/on_primary_light</item>
        <item name="android:textColorSecondary">@color/on_secondary_light</item>
        <item name="android:textColorTertiary">@color/on_primary_light</item>
        <!-- Custom items for specific places of the app -->
        <item name="bar">@color/bar_light</item>
        <item name="subbar_1">@color/subbar_1_light</item>
        <item name="subbar_2">@color/subbar_2_light</item>
        <item name="card_title">@color/card_title_light</item>
        <item name="card_tags">@color/card_tags_light</item>
        <item name="card_surface">@color/card_surface_light</item>
        <item name="card_pressed">@color/card_pressed_light</item>
        <item name="card_selected">@color/card_selected_light</item>
        <item name="drawer_background">@color/drawer_background_light</item>
        <!-- Toolbar as ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Intent activity -->
    <style name="Theme.Invisible" parent="Theme.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Picture viewer -->
    <style name="Theme.Light.Monochrome">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black_opacity_50</item>
        <item name="colorOnPrimary">@color/light_gray</item>
        <item name="android:windowBackground">@color/cod_gray</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.Light.MonochromeBottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

        <!-- Depending on APIs, any of them might be applicable :/ -->
        <item name="android:windowBackground">@color/cod_gray</item>
        <item name="colorSurface">@color/cod_gray</item>
        <item name="android:background">@color/cod_gray</item>
        <item name="android:colorBackground">@color/cod_gray</item>

        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="bottomSheetStyle">@style/Theme.Light.MonochromeModalBottomSheetDialog</item>
    </style>

    <style name="Theme.Light.MonochromeModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/cod_gray</item>
    </style>

    <!-- Prefs Activity -->
    <style name="Theme.Light.Prefs">
        <!-- Display action bar -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="actionBarTheme">@style/Theme.Light.ActionBar</item>
        <item name="android:divider">@color/secondary_light</item>
        <item name="android:textColor">@color/primary_text_color_selector</item>
        <item name="android:textColorPrimary">@color/primary_text_color_selector</item>
        <item name="android:textColorSecondary">@color/secondary_text_color_selector</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <!-- alertDialogTheme is the actual theme used by PreferenceFragmentCompat -->
        <item name="alertDialogTheme">@style/Theme.Light.Dialog</item>
    </style>

    <!-- Dialog themes -->

    <style name="Theme.Light.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorSecondary">@color/secondary_light</item>

        <!-- Depending on APIs, any of them might be applicable :/ -->
        <item name="colorSurface">@color/dialog_background_light</item>
        <item name="android:background">@color/dialog_background_light</item>
        <item name="android:windowBackground">@color/dialog_background_light</item>
        <item name="android:colorBackground">@color/dialog_background_light</item>

        <item name="colorOnSurface">@color/on_primary_light</item>
        <item name="android:textColor">@color/on_primary_light</item>
        <item name="android:textColorPrimary">@color/on_primary_light</item>
        <item name="android:textColorSecondary">@color/on_secondary_light</item>
        <item name="android:editTextColor">@color/on_primary_light</item>
        <item name="android:textColorHint">@color/on_primary_light</item>
        <item name="textColorAlertDialogListItem">@color/on_primary_light</item>
        <item name="android:checkboxStyle">@style/Theme.Light.DialogCheckbox</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.DialogButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.DialogButton</item>
    </style>

    <style name="Theme.Light.DialogFragment" parent="Theme.Light.Dialog">
        <!-- Equivalent to DialogFragment.STYLE_NO_FRAME -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Search Activity -->
    <style name="Theme.Light.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="bottomSheetStyle">@style/Theme.Light.BottomSheetStyle</item>
    </style>

    <style name="Theme.Light.BottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/drawer_background_light</item>
        <item name="behavior_draggable">false</item>
        <item name="behavior_draggableOnNestedScroll">false</item>
    </style>

    <!-- PIN screens -->
    <style name="Theme.Light.PinEntryDialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="android:windowBackground">@drawable/bg_pin_dialog</item>
        <item name="actionMenuTextColor">@color/on_primary_light</item>
    </style>


    <!-- Themes for subcomponents -->
    <style name="Theme.Light.ActionBar">
        <item name="colorSurface">?bar</item>
        <item name="colorOnSurface">@color/on_primary_light</item>
    </style>

    <style name="Theme.Light.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white_opacity_87</item>
        <item name="android:background">?bar</item>
    </style>

    <style name="Theme.Light.DialogCheckbox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:textColor">@color/on_primary_light</item>
    </style>
</resources>
