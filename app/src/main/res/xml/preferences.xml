<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceScreen
        android:icon="@drawable/ic_ui"
        android:key="interface"
        android:title="@string/pref_screen_interface">
        <PreferenceCategory
            android:title="@string/pref_cat_library"
            app:iconSpaceReserved="false">
            <CheckBoxPreference
                android:defaultValue="@string/pref_endless_scroll_default"
                android:disableDependentsState="true"
                android:key="pref_endless_scroll"
                android:summaryOff="@string/pref_endless_scroll_summary_off"
                android:summaryOn="@string/pref_endless_scroll_summary_on"
                android:title="@string/pref_endless_scroll_title"
                app:iconSpaceReserved="false" />
            <ListPreference
                android:defaultValue="@string/pref_quantity_per_page_default"
                android:dependency="pref_endless_scroll"
                android:entries="@array/pref_quantity_per_page_entries"
                android:entryValues="@array/pref_quantity_per_page_entry_values"
                android:key="pref_quantity_per_page_lists"
                android:summary="@string/pref_quantity_per_page_summary"
                android:title="@string/pref_quantity_per_page_title"
                app:iconSpaceReserved="false" />
        </PreferenceCategory>
        <PreferenceCategory
            android:title="@string/pref_cat_search"
            app:iconSpaceReserved="false">
            <ListPreference
                android:defaultValue="@string/pref_attributes_list_order_default"
                android:entries="@array/pref_attribute_list_order_entries"
                android:entryValues="@array/pref_attribute_list_order_values"
                android:key="pref_order_attribute_lists"
                android:summary="@string/pref_attributes_list_order_summary"
                android:title="@string/pref_attributes_list_order_title"
                app:iconSpaceReserved="false" />
        </PreferenceCategory>
        <PreferenceCategory
            android:title="@string/pref_cat_browser"
            app:iconSpaceReserved="false">
            <CheckBoxPreference
                android:defaultValue="@string/pref_browser_resume_last_default"
                android:key="pref_browser_resume_last"
                android:summaryOff="@string/pref_browser_resume_last_off"
                android:summaryOn="@string/pref_browser_resume_last_on"
                android:title="@string/pref_browser_resume_last_title"
                app:iconSpaceReserved="false" />
            <CheckBoxPreference
                android:defaultValue="@string/pref_browser_override_overview_default"
                android:key="pref_webview_override_overview_lists"
                android:summaryOff="@string/pref_browser_override_overview_summary_off"
                android:summaryOn="@string/pref_browser_override_overview_summary_on"
                android:title="@string/pref_browser_override_overview_title"
                app:iconSpaceReserved="false" />
            <ListPreference
                android:defaultValue="@string/pref_browser_initial_zoom_default"
                android:dependency="pref_webview_override_overview_lists"
                android:entries="@array/pref_webview_initial_zoom_entries"
                android:entryValues="@array/pref_webview_initial_zoom_values"
                android:key="pref_webview_initial_zoom_lists"
                android:summary="@string/pref_browser_initial_zoom_summary"
                android:title="@string/pref_browser_initial_zoom_title"
                app:iconSpaceReserved="false" />
            <CheckBoxPreference
                android:defaultValue="@string/pref_browser_quick_dl_default"
                android:key="pref_browser_quick_dl"
                android:summary="@string/pref_browser_quick_dl_summary"
                android:title="@string/pref_browser_quick_dl_title"
                app:iconSpaceReserved="false" />
            <CheckBoxPreference
                android:defaultValue="@string/pref_browser_augmented_default"
                android:key="pref_browser_augmented"
                android:summaryOff="@string/pref_browser_augmented_off"
                android:summaryOn="@string/pref_browser_augmented_on"
                android:title="@string/pref_browser_augmented_title"
                app:iconSpaceReserved="false" />
        </PreferenceCategory>
        <PreferenceCategory
            android:title="@string/pref_cat_theme"
            app:iconSpaceReserved="false">
            <ListPreference
                android:defaultValue="@string/pref_color_theme_default"
                android:entries="@array/pref_color_theme_entries"
                android:entryValues="@array/pref_color_theme_values"
                android:key="pref_color_theme"
                android:summary="@string/pref_color_theme_summary"
                android:title="@string/pref_color_theme_title"
                app:iconSpaceReserved="false" />
        </PreferenceCategory>
    </PreferenceScreen>

    <PreferenceScreen
        android:icon="@drawable/ic_folder"
        android:key="storage"
        android:title="@string/pref_screen_storage">
        <PreferenceCategory
            android:title="@string/pref_cat_downloads_folder"
            app:iconSpaceReserved="false">
            <Preference
                android:key="folder"
                android:summary="@string/pref_select_folder_summary"
                android:title="@string/pref_select_folder_title"
                app:iconSpaceReserved="false">
                <intent
                    android:action="android.intent.action.APPLICATION_PREFERENCES"
                    android:targetClass="me.devsaki.hentoid.activities.ImportActivity"
                    android:targetPackage="@string/app_id" />
            </Preference>
            <ListPreference
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:defaultValue="@string/pref_folder_naming_content_default"
                android:entries="@array/pref_folder_naming_content_entries"
                android:entryValues="@array/pref_folder_naming_content_entry_values"
                android:key="pref_folder_naming_content_lists"
                android:summary="@string/pref_folder_naming_content_summary"
                android:title="@string/pref_folder_naming_content_title"
                app:iconSpaceReserved="false" />
            <ListPreference
                android:defaultValue="@string/pref_folder_trunc_default"
                android:entries="@array/pref_folder_trunc_content_entries"
                android:entryValues="@array/pref_folder_trunc_content_entry_values"
                android:key="pref_folder_trunc_lists"
                android:summary="@string/pref_folder_trunc_summary"
                android:title="@string/pref_folder_trunc_title"
                app:iconSpaceReserved="false" />
            <Preference
                android:key="pref_add_no_media_file"
                android:summary="@string/pref_add_no_media_file_summary"
                android:title="@string/pref_add_no_media_file_title"
                app:iconSpaceReserved="false" />
        </PreferenceCategory>
        <PreferenceCategory
            android:title="@string/pref_cat_advanced"
            app:iconSpaceReserved="false">
            <Preference
                android:key="pref_refresh_bookshelf"
                android:summary="@string/pref_refresh_library_summary"
                android:title="@string/pref_refresh_library_title"
                app:iconSpaceReserved="false" />
        </PreferenceCategory>
    </PreferenceScreen>

    <PreferenceScreen
        android:icon="@drawable/ic_action_download"
        android:key="downloader"
        android:title="@string/pref_screen_downloader">
        <CheckBoxPreference
            android:defaultValue="@string/pref_queue_autostart_default"
            android:key="pref_queue_autostart"
            android:summaryOff="@string/pref_queue_autostart_off"
            android:summaryOn="@string/pref_queue_autostart_on"
            android:title="@string/pref_queue_autostart_title"
            app:iconSpaceReserved="false" />
        <PreferenceCategory
            android:title="@string/download_retries_screen_title"
            app:iconSpaceReserved="false">
            <CheckBoxPreference
                android:defaultValue="@string/pref_dl_retries_active_default"
                android:key="pref_dl_retries_active"
                android:summaryOff="@string/pref_dl_retries_off"
                android:summaryOn="@string/pref_dl_retries_on"
                android:title="@string/download_retries_active_title"
                app:iconSpaceReserved="false" />
            <ListPreference
                android:defaultValue="@string/pref_dl_retries_number_default"
                android:dependency="pref_dl_retries_active"
                android:entries="@array/pref_dl_retries_number_entries"
                android:entryValues="@array/pref_dl_retries_number_entries"
                android:key="pref_dl_retries_number"
                android:summary="@string/pref_dl_retries_number_summary"
                android:title="@string/pref_dl_retries_number_title"
                app:iconSpaceReserved="false" />
            <ListPreference
                android:defaultValue="@string/pref_dl_retries_mem_limit_default"
                android:dependency="pref_dl_retries_active"
                android:entries="@array/pref_dl_retries_mem_limit_entries"
                android:entryValues="@array/pref_dl_retries_mem_limit_values"
                android:key="pref_dl_retries_mem_limit"
                android:summary="@string/pref_dl_retries_mem_limit_summary"
                android:title="@string/pref_dl_retries_mem_limit_title"
                app:iconSpaceReserved="false" />
        </PreferenceCategory>
        <PreferenceCategory
            android:title="@string/pref_dl_hitomi"
            app:iconSpaceReserved="false">
            <CheckBoxPreference
                android:defaultValue="@string/pref_dl_hitomi_webp_default"
                android:key="pref_dl_hitomi_webp"
                android:summaryOff="@string/pref_dl_hitomi_webp_summary_off"
                android:summaryOn="@string/pref_dl_hitomi_webp_summary_on"
                android:title="@string/pref_dl_hitomi_webp_title"
                app:iconSpaceReserved="false" />
        </PreferenceCategory>
        <PreferenceCategory
            android:title="@string/pref_cat_advanced"
            app:iconSpaceReserved="false">
            <ListPreference
                android:defaultValue="@string/pref_dl_threads_quantity_default"
                android:entries="@array/pref_dl_threads_quantity_entries"
                android:entryValues="@array/pref_dl_threads_quantity_values"
                android:key="pref_dl_threads_quantity_lists"
                android:summary="@string/pref_dl_threads_quantity_summary"
                android:title="@string/pref_dl_threads_quantity_title"
                app:iconSpaceReserved="false" />
        </PreferenceCategory>
    </PreferenceScreen>

    <PreferenceScreen
        android:icon="@drawable/ic_lock"
        android:key="privacy"
        android:title="@string/pref_screen_privacy">
        <PreferenceCategory
            android:title="@string/pref_screen_privacy"
            app:iconSpaceReserved="false">
            <Preference
                android:key="pref_app_lock"
                android:title="App Lock"
                app:iconSpaceReserved="false" />
            <CheckBoxPreference
                android:defaultValue="@string/pref_app_preview_default"
                android:key="pref_app_preview"
                android:summaryOff="@string/pref_app_preview_summary_off"
                android:summaryOn="@string/pref_app_preview_summary_on"
                android:title="@string/pref_app_preview_title"
                app:iconSpaceReserved="false" />
            <CheckBoxPreference
                android:defaultValue="@string/pref_analytics_preference_default"
                android:key="pref_analytics_preference"
                android:summaryOff="@string/pref_analytics_preference_summary_off"
                android:summaryOn="@string/pref_analytics_preference_summary_on"
                android:title="@string/pref_analytics_preference_title"
                app:iconSpaceReserved="false" />
        </PreferenceCategory>
    </PreferenceScreen>

    <PreferenceScreen
        android:icon="@drawable/ic_images"
        android:key="viewer"
        android:title="@string/pref_screen_viewer">
        <PreferenceScreen
            android:key="viewer_controls"
            android:title="@string/pref_viewer_controls"
            app:iconSpaceReserved="false">
            <PreferenceCategory
                android:title="@string/pref_viewer_browse_mode"
                app:iconSpaceReserved="false">
                <ListPreference
                    android:defaultValue="@string/pref_viewer_browse_mode_default"
                    android:entries="@array/pref_viewer_browse_mode_entries"
                    android:entryValues="@array/pref_viewer_browse_mode_values"
                    android:key="pref_viewer_browse_mode"
                    android:summary="@string/pref_generic_summary"
                    android:title="@string/pref_viewer_browse_mode"
                    app:iconSpaceReserved="false" />
            </PreferenceCategory>
            <PreferenceCategory
                android:title="@string/pref_viewer_page_turn"
                app:iconSpaceReserved="false">
                <CheckBoxPreference
                    android:defaultValue="@bool/pref_viewer_page_turn_swipe_default"
                    android:key="pref_viewer_page_turn_swipe"
                    android:title="@string/pref_viewer_page_turn_swipe"
                    app:iconSpaceReserved="false" />
                <CheckBoxPreference
                    android:defaultValue="@bool/pref_viewer_page_turn_tap_default"
                    android:key="pref_viewer_page_turn_tap"
                    android:title="@string/pref_viewer_page_turn_tap"
                    app:iconSpaceReserved="false" />
                <CheckBoxPreference
                    android:defaultValue="@bool/pref_viewer_page_turn_volume_default"
                    android:key="pref_viewer_page_turn_volume"
                    android:title="@string/pref_viewer_page_turn_volume"
                    app:iconSpaceReserved="false" />
            </PreferenceCategory>
            <CheckBoxPreference
                android:defaultValue="@bool/pref_viewer_swipe_to_fling_default"
                android:dependency="pref_viewer_page_turn_swipe"
                android:key="pref_viewer_swipe_to_fling"
                android:title="@string/pref_viewer_swipe_to_fling"
                app:iconSpaceReserved="false" />
            <CheckBoxPreference
                android:defaultValue="@bool/pref_viewer_invert_volume_default"
                android:dependency="pref_viewer_page_turn_volume"
                android:key="pref_viewer_invert_volume_rocker"
                android:title="@string/pref_viewer_invert_volume"
                app:iconSpaceReserved="false" />
            <PreferenceCategory
                android:title="@string/pref_viewer_zoom"
                app:iconSpaceReserved="false">
                <CheckBoxPreference
                    android:defaultValue="@bool/pref_viewer_zoom_holding_default"
                    android:key="pref_viewer_zoom_holding"
                    android:title="@string/pref_viewer_zoom_holding"
                    app:iconSpaceReserved="false" />
            </PreferenceCategory>
        </PreferenceScreen>

        <PreferenceScreen
            android:key="viewer_visuals"
            android:title="@string/pref_viewer_visuals"
            app:iconSpaceReserved="false">
            <CheckBoxPreference
                android:defaultValue="@bool/pref_viewer_keep_screen_on_default"
                android:key="pref_viewer_keep_screen_on"
                android:title="@string/pref_viewer_keep_screen_on"
                app:iconSpaceReserved="false" />
            <ListPreference
                android:defaultValue="@string/pref_viewer_display_mode_default"
                android:entries="@array/pref_viewer_display_mode_entries"
                android:entryValues="@array/pref_viewer_display_mode_values"
                android:key="pref_viewer_image_display"
                android:summary="@string/pref_generic_summary"
                android:title="@string/pref_viewer_display_mode"
                app:iconSpaceReserved="false" />
            <CheckBoxPreference
                android:defaultValue="@bool/pref_viewer_auto_rotate_default"
                android:key="pref_viewer_auto_rotate"
                android:title="@string/pref_viewer_auto_rotate"
                android:summaryOff="@string/pref_viewer_auto_rotate_summary_off"
                android:summaryOn="@string/pref_viewer_auto_rotate_summary_on"
                app:iconSpaceReserved="false" />
            <CheckBoxPreference
                android:defaultValue="@bool/pref_viewer_display_pagenum_default"
                android:key="pref_viewer_display_pagenum"
                android:title="@string/pref_viewer_display_pagenum"
                app:iconSpaceReserved="false" />
            <CheckBoxPreference
                android:defaultValue="@bool/pref_viewer_tap_transitions_default"
                android:key="pref_viewer_tap_transitions"
                android:title="@string/pref_viewer_tap_transitions"
                app:iconSpaceReserved="false" />
            <CheckBoxPreference
                android:defaultValue="@bool/pref_viewer_zoom_transitions_default"
                android:key="pref_viewer_zoom_transitions"
                android:title="@string/pref_viewer_zoom_transitions"
                app:iconSpaceReserved="false" />
            <ListPreference
                android:defaultValue="@string/pref_viewer_separating_bars_default"
                android:entries="@array/pref_viewer_separating_bars_entries"
                android:entryValues="@array/pref_viewer_separating_bars_values"
                android:key="pref_viewer_separating_bars"
                android:summary="@string/pref_generic_summary"
                android:title="@string/pref_viewer_separating_bars"
                app:iconSpaceReserved="false" />
        </PreferenceScreen>

        <PreferenceScreen
            android:key="viewer_navigation"
            android:title="@string/pref_viewer_navigation"
            app:iconSpaceReserved="false">
            <CheckBoxPreference
                android:defaultValue="@bool/pref_viewer_zoom_transitions_default"
                android:key="pref_viewer_resume_last_left"
                android:title="@string/pref_viewer_resume_last_left_title"
                android:summaryOff="@string/pref_viewer_resume_last_left_summary_off"
                android:summaryOn="@string/pref_viewer_resume_last_left_summary_on"
                app:iconSpaceReserved="false" />
            <CheckBoxPreference
                android:defaultValue="@bool/pref_viewer_open_gallery_default"
                android:key="pref_viewer_open_gallery"
                android:title="@string/pref_viewer_open_gallery"
                app:iconSpaceReserved="false" />
            <CheckBoxPreference
                android:defaultValue="@bool/pref_viewer_continuous_default"
                android:key="pref_viewer_continuous"
                android:title="@string/pref_viewer_continuous_title"
                android:summaryOff="@string/pref_viewer_continuous_summary_off"
                android:summaryOn="@string/pref_viewer_continuous_summary_on"
                app:iconSpaceReserved="false" />
            <ListPreference
                android:defaultValue="@string/pref_viewer_read_threshold_default"
                android:entries="@array/pref_viewer_read_threshold_entries"
                android:entryValues="@array/pref_viewer_read_threshold_values"
                android:key="pref_viewer_read_threshold"
                android:summary="@string/pref_generic_summary"
                android:title="@string/pref_viewer_read_threshold"
                app:iconSpaceReserved="false" />
            <ListPreference
                android:defaultValue="@string/pref_viewer_slideshow_delay_default"
                android:entries="@array/pref_viewer_slideshow_delay_entries"
                android:entryValues="@array/pref_viewer_slideshow_delay_values"
                android:key="pref_viewer_slideshow_delay"
                android:summary="@string/pref_generic_summary"
                android:title="@string/pref_viewer_slideshow_delay"
                app:iconSpaceReserved="false" />
        </PreferenceScreen>

    </PreferenceScreen>

    <PreferenceScreen
        android:icon="@drawable/ic_action_refresh"
        android:key="updates"
        android:title="@string/pref_screen_updates">
        <PreferenceCategory
            android:title="@string/pref_screen_updates"
            app:iconSpaceReserved="false">
            <Preference
                android:key="pref_check_updates_manual"
                android:summary="@string/pref_check_updates_manual_summary"
                android:title="@string/pref_check_updates_manual_title"
                app:iconSpaceReserved="false" />
            <CheckBoxPreference
                android:defaultValue="@string/pref_check_updates_default"
                android:key="pref_check_updates"
                android:summaryOff="@string/pref_check_updates_summary_off"
                android:summaryOn="@string/pref_check_updates_summary_on"
                android:title="@string/pref_check_updates_title"
                app:iconSpaceReserved="false" />
        </PreferenceCategory>
    </PreferenceScreen>

</PreferenceScreen>
