<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/viewer_choose_direction"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/choice_ltr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/viewer_direction_ltr"
            app:icon="@drawable/ic_direction_ltr_icons"
            app:iconSize="48dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/choice_rtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/viewer_direction_rtl"
            app:icon="@drawable/ic_direction_rtl_icons"
            app:iconSize="48dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/choice_ttb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/viewer_direction_ttb"
            app:icon="@drawable/ic_direction_ttb_icons"
            app:iconSize="48dp" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

</androidx.constraintlayout.widget.ConstraintLayout>